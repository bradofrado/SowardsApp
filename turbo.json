{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^db:generate", "^db:migrate"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    },
    "test": {},
    "format": {},
    "db:generate": {},
    "db:push": {
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "db:migrate": {},
    "typecheck": {
      "cache": false
    }
  },
  "globalEnv": [
    "PORT",
    "DATABASE_URL",
    "VERCEL_URL",
    "NODE_ENV",
    "NEXT_PUBLIC_GENERATE_EVENTS",
    "OPENAI_API_KEY",
    "CLERK_SECRET_KEY",
    "OPEN_WEATHER_API_KEY",
    "PLAID_CLIENT_ID",
    "PLAID_SECRET",
    "PLAID_ENV",
    "CRON_SECRET",
    "POSTGRES_URL",
    "POSTGRES_PRISMA_URL",
    "SUPABASE_URL",
    "POSTGRES_URL_NON_POOLING",
    "SUPABASE_JWT_SECRET",
    "POSTGRES_USER",
    "POSTGRES_PASSWORD",
    "POSTGRES_DATABASE",
    "SUPABASE_SERVICE_ROLE_KEY",
    "POSTGRES_HOST",
    "SUPABASE_ANON_KEY"
  ]
}
